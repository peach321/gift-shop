<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gift_card"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:elevation="3dp"
    android:background="#fff"
    android:stateListAnimator="@drawable/category_cardview_selector2"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gift_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/gift_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="#fff"
            android:paddingTop="3dp"
            android:layout_gravity="center"
            android:maxLines="2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#fff">
            <TextView
                android:id="@+id/price_sign"
                android:textColor="#f00"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"
                android:text="ï¿¥"
                android:layout_marginBottom="3dp"
                android:layout_alignBottom="@+id/gift_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/gift_price"
                android:textColor="#f00"
                android:layout_marginLeft="3dp"
                android:textSize="18sp"
                android:layout_toRightOf="@id/price_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/gift_praise"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_alignBottom="@id/gift_price"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_toLeftOf="@id/gift_praise"
                android:layout_alignBottom="@id/gift_praise"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/icon_praise"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>